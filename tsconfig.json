{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "declarationDir": "dist",
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}

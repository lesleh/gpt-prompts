{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/cjs",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
